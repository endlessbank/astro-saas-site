---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  slug: string;
  author?: string;
}

const { title, description, pubDate, slug, author = 'Team' } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<article class="{{BLOG_CARD_CLASS}}">
  <a href={`/blog/${slug}`} class="{{BLOG_CARD_LINK_CLASS}}">
    <div class="{{BLOG_CARD_IMAGE_CLASS}}">
      <svg class="{{BLOG_CARD_IMAGE_ICON_CLASS}}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
    </div>
    
    <div class="{{BLOG_CARD_CONTENT_CLASS}}">
      <div class="{{BLOG_CARD_META_CLASS}}">
        <time datetime={pubDate.toISOString()}>{formattedDate}</time>
        <span>·</span>
        <span>{author}</span>
      </div>
      
      <h2 class="{{BLOG_CARD_TITLE_CLASS}}">
        {title}
      </h2>
      
      <p class="{{BLOG_CARD_EXCERPT_CLASS}}">
        {description}
      </p>
      
      <span class="{{BLOG_CARD_READMORE_CLASS}}">
        Read more →
      </span>
    </div>
  </a>
</article>
