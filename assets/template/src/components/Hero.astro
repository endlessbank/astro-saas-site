---
import { siteConfig } from '../config/site.config';
---

<section class="{{HERO_SECTION_CLASS}}" id="hero">
  <div class="{{HERO_CONTAINER_CLASS}}">
    <div class="{{HERO_CONTENT_CLASS}}">
      <h1 class="{{HERO_HEADLINE_CLASS}}">
        {siteConfig.hero.headline}
      </h1>
      
      <p class="{{HERO_SUBHEADLINE_CLASS}}">
        {siteConfig.hero.subheadline}
      </p>
      
      <div class="{{HERO_CTA_WRAPPER_CLASS}}">
        <a href={siteConfig.hero.cta.href} class="{{HERO_PRIMARY_CTA_CLASS}}">
          {siteConfig.hero.cta.text}
        </a>
        <a href={siteConfig.hero.secondaryCta.href} class="{{HERO_SECONDARY_CTA_CLASS}}">
          {siteConfig.hero.secondaryCta.text}
        </a>
      </div>
    </div>
    
    <!-- Hero Image Placeholder -->
    <div class="{{HERO_IMAGE_WRAPPER_CLASS}}">
      <div class="{{HERO_IMAGE_PLACEHOLDER_CLASS}}">
        <svg class="{{HERO_IMAGE_ICON_CLASS}}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        <p class="{{HERO_IMAGE_TEXT_CLASS}}">Product Screenshot</p>
      </div>
    </div>
  </div>
</section>
