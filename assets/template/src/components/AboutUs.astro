---
import { siteConfig } from '../config/site.config';
---

<section class="{{ABOUT_SECTION_CLASS}}" id="about">
  <div class="{{ABOUT_CONTAINER_CLASS}}">
    <div class="{{ABOUT_CONTENT_CLASS}}">
      <h2 class="{{ABOUT_HEADING_CLASS}}">
        {siteConfig.about.headline}
      </h2>
      <p class="{{ABOUT_STORY_CLASS}}">
        {siteConfig.about.story}
      </p>
      <p class="{{ABOUT_MISSION_CLASS}}">
        {siteConfig.about.mission}
      </p>
    </div>
    
    <!-- Optional: Founder/Team Image Placeholder -->
    <div class="{{ABOUT_IMAGE_CLASS}}">
      <div class="{{ABOUT_IMAGE_PLACEHOLDER_CLASS}}">
        <svg class="{{ABOUT_IMAGE_ICON_CLASS}}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
        <p class="{{ABOUT_IMAGE_TEXT_CLASS}}">Team Photo</p>
      </div>
    </div>
  </div>
</section>
